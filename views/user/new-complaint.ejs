<%- include('../partials/header.ejs') -%>
    <main class="container">
        
        <div><h1><% if (typeof id !== 'undefined') { %>
            Complaint submitted successfully with complaint ID: <%= id %><br>
            Please note down your complaint ID for future reference.<br><br>
        <% } %>File a New Complaint</h1></div>
        <div class="login-form">
            <form action="file-complaint" method="post">
                <div>
                    <label for="location">Location:</label>
                    <input type="text" id="location" name="location" required placeholder="Search or select an option">
                </div>
                <div>
                    <label for="subarea">Sub-Area:</label>
                    <input type="text" id="subarea" name="subarea" required placeholder="Search or select an option">
                </div>
                <div>
                    <label for="empno">EIS Number / Man Number:</label>
                    <input type="text" id="username" name="empno" required>
                </div>
                <div>
                    <label for="username">Employee Name:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div>
                    <label for="mobilenumber">Mobile Number:</label>
                    <input type="number" id="mobilenumber" name="mobilenumber" required>
                </div>
                <div>
                    <label for="desc">Description:</label>
                    <input type="text" id="desc" name="desc" required>
                </div>
                <div>
                    <label for="email">Email (Optional):</label>
                    <input type="email" id="email" name="email">
                </div>
                <button type="submit">Submit Complaint</button>
            </form>
            
        </div>
            <div class="complaint-links">
                <a>File Complaint</a>
                <a href="view-complaintsbyID">View complaint by ID</a>
                <a>View complaint by serial number</a>
                <a href="view-complaints">View registered complaints</a>
        </div>
    </main>
<%- include('../partials/footer.ejs') -%>
</body>
</html>